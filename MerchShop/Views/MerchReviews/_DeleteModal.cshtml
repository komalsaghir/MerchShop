<!-- Delete Merch Review Modal -->
<div id="deleteModal" class="modal" style="max-height: 50vh; overflow-y: auto;">
	<div class="modal-content">
		<span class="close" onclick="closeDeleteModal()">&times;</span>
		<div class="modal-header bg-danger text-white">
			<h3 class="modal-title">Delete Review</h3>
		</div>
		<div class="modal-body">
			<p>Are you sure you want to delete this review?</p>
			<input type="hidden" id="deleteMerchId" name="deleteMerchId" />
		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-danger" onclick="deleteReview()">Delete</button>
			<button type="button" class="btn btn-secondary" onclick="closeDeleteModal()">Cancel</button>
		</div>
	</div>
</div>

<script>
	// Open delete modal function
	function openDeleteModal(merchId) {
		// Set the merch ID in a hidden input field
		$('#deleteMerchId').val(merchId);
		// Display the delete modal
		$('#deleteModal').css('display', 'block');
	}

	// Close delete modal function
	function closeDeleteModal() {
		$('#deleteModal').css('display', 'none');
	}

	// Delete inventory function
	function deleteReview() {
		// Get the merch ID from the hidden input field
		var merchId = $('#deleteMerchId').val();

		// Send AJAX request to delete the inventory
		$.ajax({
			url: '/MerchReviews/Delete/' + merchId,
			type: 'POST',
			success: function (data) {
				// Handle success response
				console.log(data);
				alert(data);
				// Close the delete modal
				closeDeleteModal();
				// Reload the page
				location.reload();
			},
			error: function (error) {
				// Handle error response
				console.error(error);
				alert(error.responseText);
			}
		});
	}
</script>