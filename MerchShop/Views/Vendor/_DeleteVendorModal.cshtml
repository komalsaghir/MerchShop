<!-- Delete Vendor Modal -->
<div id="deleteModal" class="modal" style="max-height: 50vh; overflow-y: auto;">
	<div class="modal-content">
		<span class="close" onclick="closeDeleteModal()">&times;</span>
		<div class="modal-header bg-danger text-white">
			<h3 class="modal-title">Delete Vendor</h3>
		</div>
		<div class="modal-body">
			<p>Are you sure you want to delete this vendor?</p>
			<input type="hidden" id="deleteVendorId" name="deleteVendorId" />
		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-danger" onclick="deleteVendor()">Delete</button>
			<button type="button" class="btn btn-secondary" onclick="closeDeleteModal()">Cancel</button>
		</div>
	</div>
</div>

<script>
	// Open delete modal function
	function openDeleteModal(vendorId) {
		// Set the vendor ID in a hidden input field
		$('#deleteVendorId').val(vendorId);
		// Display the delete modal
		$('#deleteModal').css('display', 'block');
	}

	// Close delete modal function
	function closeDeleteModal() {
		$('#deleteModal').css('display', 'none');
	}

	// Delete vendor function
	function deleteVendor() {
		// Get the vendor ID from the hidden input field
		var vendorId = $('#deleteVendorId').val();

		// Send AJAX request to delete the vendor
		$.ajax({
			url: '/Vendor/Delete/' + vendorId,
			type: 'POST',
			success: function (data) {
				// Handle success response
				console.log(data);
				alert(data);
				// Close the delete modal
				closeDeleteModal();
				// Reload the page
				location.reload();
			},
			error: function (error) {
				// Handle error response
				console.error(error);
				alert(error.responseText);
			}
		});
	}
</script>