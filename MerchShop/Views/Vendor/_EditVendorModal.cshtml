<div id="editModal" class="modal" style="max-height: 80vh; overflow-y: auto;">
	<div class="modal-content">
		<span class="close" onclick="closeEditModal()">&times;</span>
		<div class="modal-header bg-primary text-white">
			<h3 class="modal-title">Edit Vendor</h3>
		</div>
		<div class="modal-body">
			<form id="editForm">
				<input type="hidden" id="vendorId" name="vendorId" />
				<div class="form-group">
					<label for="name"><b>Name:</b></label>
					<input type="text" class="form-control" id="name" name="name" />
				</div>
				<div style="margin-bottom: 10px;"></div> <!-- Adding space -->
				<div class="form-group">
					<label for="url"><b>URL:</b></label>
					<input type="text" class="form-control" id="url" name="url" />
				</div>
				<div style="margin-bottom: 10px;"></div> <!-- Adding space -->
				<div class="form-group">
					<label for="rating"><b>Rating:</b></label>
					<input type="number" step="0.01" class="form-control" id="rating" name="rating" />
				</div>
				<div style="margin-bottom: 10px;"></div> <!-- Adding space -->
			</form>
		</div>
		<div class="modal-footer">
			<button type="button" onclick="saveChanges()" class="btn btn-primary">Save</button>
			<button type="button" class="btn btn-secondary" onclick="closeEditModal()">Close</button>
		</div>
	</div>
</div>

<script>
	// JavaScript function to close the modal
	function closeEditModal() {
		document.getElementById("editModal").style.display = "none";
	}

	function openEditModal(vendorId, name, url, rating) {
		document.getElementById("vendorId").value = vendorId;
		document.getElementById("name").value = name;
		document.getElementById("url").value = url;
		document.getElementById("rating").value = rating;
		document.getElementById("editModal").style.display = "block";
	}

	function saveChanges() {
		// Gather form data
		var formData = {
			VendorID: $('#vendorId').val(),
			Name: $('#name').val(),
			WebURL: $('#url').val(),
			OverallRating: $('#rating').val()
		};

		// Send AJAX request
		$.ajax({
			url: '/Vendor/SaveChanges', // Update with your controller and action names
			type: 'POST',
			contentType: 'application/json',
			data: JSON.stringify(formData),
			success: function (data) {
				// Handle success response
				console.log(data);
				alert(data);
				// Close the modal and perform other actions
				closeEditModal();
				// Reload the page
				location.reload();
			},
			error: function (error) {
				// Handle error response
				console.error(error);
				alert(error.responseText);
			}
		});
	}
</script>

