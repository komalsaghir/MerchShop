@model IEnumerable<MerchShop.Models.DomainModels.Vendor>
@{
    ViewData["Title"] = "Vendors";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/modal.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>

<h1 style="text-align: center; display: flex; justify-content: space-between;">
    @ViewData["Title"]
    <button class="btn btn-primary" onclick="openEditModal(0, '', '', '0')">
        <i class="bi bi-plus"></i> Add Vendor
    </button>
</h1>
<br />
<table class="table">
    <thead style="text-align: center;">
        <tr>
            <th>ID</th>
            <th>Vendor Name</th>
            <th>Vendor Url</th>
            <th>Vendor Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody style="text-align: center;">
        @foreach (var vendor in Model)
        {
            <tr>
                <td>@vendor.VendorID</td>
                <td>@vendor.Name</td>
                <td><a href="@vendor.WebURL">@vendor.WebURL</a></td>
                <td>@vendor.OverallRating</td>
                <td>
                    <a href="#" onclick="openEditModal(@vendor.VendorID, '@vendor.Name', '@vendor.WebURL',@vendor.OverallRating)" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a href="#" class="btn btn-danger" onclick="openDeleteModal(@vendor.VendorID)">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Include the Edit Modal -->
@Html.Partial("_EditVendorModal")
@Html.Partial("_DeleteVendorModal")
