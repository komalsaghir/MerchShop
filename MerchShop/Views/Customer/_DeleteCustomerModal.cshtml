<!-- Delete Customer Modal -->
<div id="deleteModal" class="modal" style="max-height: 50vh; overflow-y: auto;">
	<div class="modal-content">
		<span class="close" onclick="closeDeleteModal()">&times;</span>
		<div class="modal-header bg-danger text-white">
			<h3 class="modal-title">Delete Customer</h3>
		</div>
		<div class="modal-body">
			<p>Are you sure you want to delete this customer?</p>
			<input type="hidden" id="deleteCustomerId" name="deleteCustomerId" />
		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-danger" onclick="deleteCustomer()">Delete</button>
			<button type="button" class="btn btn-secondary" onclick="closeDeleteModal()">Cancel</button>
		</div>
	</div>
</div>

<script>
	// Open delete modal function
	function openDeleteModal(customerId) {
		// Set the vendor ID in a hidden input field
		$('#deleteCustomerId').val(ustomerId);
		// Display the delete modal
		$('#deleteModal').css('display', 'block');
	}

	// Close delete modal function
	function closeDeleteModal() {
		$('#deleteModal').css('display', 'none');
	}

	// Delete vendor function
	function deleteCustomer() {
		// Get the vendor ID from the hidden input field
		var vendorId = $('#deleteCustomerId').val();

		// Send AJAX request to delete the vendor
		$.ajax({
			url: '/Customer/Delete/' + vendorId,
			type: 'POST',
			success: function (data) {
				// Handle success response
				console.log(data);
				alert(data);
				// Close the delete modal
				closeDeleteModal();
				// Reload the page
				location.reload();
			},
			error: function (error) {
				// Handle error response
				console.error(error);
				alert(error.responseText);
			}
		});
	}
</script>