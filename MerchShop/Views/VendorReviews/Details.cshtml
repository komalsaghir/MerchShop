@model MerchShop.Models.DomainModels.Vendor

@{
    ViewData["Title"] = "Vendor Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Vendor ID: @Model.VendorID</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Item Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.WebURL</dd>

        <dt class="col-sm-2">Vendor</dt>
        <dd class="col-sm-10">@Model.OverallRating</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-primary">Back to Vendor Reviews</a>
